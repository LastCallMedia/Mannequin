<!doctype html>
<html>
{% include 'partials/head.twig' %}

<body class="page">
{% include 'partials/topbar.twig' %}
<main class="Page">
    <h1 class="title">{{ title }}</h1>
    <div class="content" id="content">
        {{ contents }}
    </div>
    {% if collection and collection != 'Menu' %}
        <aside class="Sidebar" data-sticky-container>
            <div class="sticky" data-sticky data-margin-top="0" data-anchor="content">
                <h3>{{ collection }}</h3>
                <ul class="menu vertical">
                    {% for link in metadata.collections[collection] %}
                        {% if link.path == path %}
                            <li class="active">
                                <a href="/{{ link.path }}">{{ link.title }}</a>
                                {% if headings %}
                                    <ul class="menu">
                                        {% for heading in headings %}
                                            <li><a href="#{{ heading.id }}">{{ heading.text }}</a></li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% else %}
                            <li><a href="/{{ link.path }}">{{ link.title }}</a></li>
                        {% endif %}

                    {% endfor %}
                </ul>
            </div>
        </aside>
    {% endif %}
</main>
{% include 'partials/footer.twig' %}
{% include 'partials/foot.twig' %}
</body>
</html>
