{% if _pattern %}{% block patterninfo %}
name: Twig with variables
tags:
  type: molecule
variables:
  template_type:
    type: string
    value: twig
  local:
    type: boolean
    value: true
  global:
    type: boolean
{% endblock %}{% endif %}
<h1>This is a {{ template_type }} template {{ local ? 'using local variables' : 'not using local variables' }}, {{ global ? 'using global variables' : 'not using global variables' }}.</h1>
